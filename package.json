{
  "version": "0.0.0-development",
  "name": "echint",
  "description": "Quick validation of files with EditorConfig",
  "author": "Ahmad Nassri <ahmad@ahmadnassri.com> (https://www.ahmadnassri.com/)",
  "homepage": "https://github.com/ahmadnassri/echint",
  "repository": {
    "type": "git",
    "url": "https://github.com/ahmadnassri/echint.git"
  },
  "license": "ISC",
  "main": "lib/index.js",
  "bin": {
    "echint": "lib/bin.js"
  },
  "keywords": [
    "echint",
    "editorconfig",
    "lint",
    "hint",
    "lintspaces"
  ],
  "engines": {
    "node": ">=4"
  },
  "files": [
    "lib"
  ],
  "bugs": {
    "url": "https://github.com/ahmadnassri/echint/issues"
  },
  "scripts": {
    "lint": "snazzy && ./lib/bin.js",
    "pretest": "npm run lint",
    "test": "tap test",
    "coverage": "tap test --reporter silent --coverage"
  },
  "standard": {
    "ignore": [
      "test/fixtures/**"
    ]
  },
  "echint": {
    "ignore": [
      "lib/**",
      "test/fixtures/**"
    ]
  },
  "devDependencies": {
    "echint-config-jquery": "^1.0.0",
    "snazzy": "^6.0.0",
    "tap": "11.1.1"
  },
  "dependencies": {
    "chalk": "^2.0.0",
    "commander": "^2.9.0",
    "dotenv": "^4.0.0",
    "glob": "^7.1.1",
    "lintspaces": "^0.5.0",
    "minimatch": "^3.0.3",
    "pkg-config": "^1.1.1"
  }
}
